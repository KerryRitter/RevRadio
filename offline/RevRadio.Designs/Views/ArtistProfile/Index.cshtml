@model RevRadio.Data.Models.ArtistProfile

@{
    ViewData["Title"] = "Artist Profile Index";
}

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-xs-4" style="height: 300px; background: url('@Model.ImageFileUrl') center center no-repeat;">
        </div>
        <div class="col-xs-8">
            <div class="row" style="border-bottom: 1px solid;">
                <div class="col-xs-6">
                    <h1 style="font-size: 48px; margin: 0; padding: 0;">@Model.Name</h1>
                    <h4>
                        @Model.City, @Model.State
                        
                        @foreach(var genre in Model.Genres)
                        {
                            <a href="/genre/@Html.Raw(genre.Slug)" class="badge">@genre.Name</a>
                        }
                    </h4>
                </div>
                <div class="col-xs-6 text-right">
                    <button class="btn btn-primary" style="width: 100px;">Follow</button><br />
                    <p class="text-muted" style="margin-top: 5px;">618 Followers</p>
                </div>
            </div>
        </div>
    </div>
</div>